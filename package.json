{
  "name": "stuckin",
  "version": "1.0.9",
  "type": "module",
  "author": "Pavel Melnik <pavelmelnik94@gmail.com>",
  "license": "MIT",
  "description": "Мощная, гибкая и оптимизированная библиотека для sticky элементов с TypeScript, React 18+, MobX и продвинутой отладкой",
  "keywords": [
    "react",
    "sticky",
    "typescript",
    "mobx",
    "performance",
    "responsive",
    "ssr",
    "hooks",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PavelMelnik94/stuckin.git"
  },
  "bugs": {
    "url": "https://github.com/PavelMelnik94/stuckin/issues"
  },
  "homepage": "https://github.com/PavelMelnik94/stuckin#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/stuckin.css",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:lib && npm run build:types",
    "build:lib": "vite build",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "build:analyze": "vite build --mode analyze",
    "clean": "rimraf dist coverage .nyc_output",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 35",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "size-limit": "size-limit",
    "analyze": "npm run build:analyze && npx vite-bundle-analyzer dist/stats.html",
    "prepublishOnly": "npm run lint && npm run type-check && npm run test:ci && npm run build && npm run size-limit",
    "release": "npm run release:patch",
    "release:patch": "npm version patch && npm run publish:all",
    "release:minor": "npm version minor && npm run publish:all",
    "release:major": "npm version major && npm run publish:all",
    "publish:all": "git push origin main --tags && gh release create v$(node -p \"require('./package.json').version\") --title \"Release v$(node -p \"require('./package.json').version\")\" --generate-notes --latest && npm publish"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "mobx": {
      "optional": true
    },
    "mobx-react-lite": {
      "optional": true
    }
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@size-limit/preset-small-lib": "^11.0.2",
    "@swc/core": "^1.12.3",
    "@swc/jest": "^0.2.38",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "identity-obj-proxy": "^3.0.0",
    "intersection-observer": "^0.12.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mobx": "^6.13.6",
    "mobx-react-lite": "^4.0.7",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.82.0",
    "size-limit": "^11.0.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-bundle-analyzer": "^0.8.0",
    "vite-plugin-dts": "^4.3.0"
  },
  "size-limit": [
    {
      "name": "Full bundle ES (gzipped)",
      "path": "dist/index.js",
      "limit": "30 KB"
    },
    {
      "name": "Full bundle CJS (gzipped)",
      "path": "dist/index.cjs",
      "limit": "25 KB"
    }
  ],
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
