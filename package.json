{
  "name": "@pavelmelnik94/sticky-lib",
  "version": "1.0.0",
  "author": "Pavel Melnik <pavelmelnik94@gmail.com>",
  "license": "MIT",
  "description": "Мощная, гибкая и оптимизированная библиотека для sticky элементов с TypeScript, React 18+, MobX и продвинутой отладкой",
  "keywords": [
    "react",
    "sticky",
    "typescript",
    "mobx",
    "performance",
    "responsive",
    "ssr",
    "hooks",
    "components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PavelMelnik94/sticky-lib.git"
  },
  "bugs": {
    "url": "https://github.com/PavelMelnik94/sticky-lib/issues"
  },
  "homepage": "https://github.com/PavelMelnik94/sticky-lib#readme",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.es.js",
      "require": "./dist/hooks.js",
      "types": "./dist/hooks.d.ts"
    },
    "./components": {
      "import": "./dist/components.es.js",
      "require": "./dist/components.js",
      "types": "./dist/components.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.es.js",
      "require": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    },
    "./debug": {
      "import": "./dist/debug.es.js",
      "require": "./dist/debug.js",
      "types": "./dist/debug.d.ts"
    },
    "./styles": "./dist/style.css",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:lib && npm run build:types",
    "build:lib": "vite build",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "build:analyze": "vite build --mode analyze",
    "clean": "rimraf dist coverage .nyc_output",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "size-limit": "size-limit",
    "analyze": "npm run build:analyze && npx vite-bundle-analyzer dist/stats.html",
    "prepublishOnly": "npm run lint && npm run type-check && npm run test:ci && npm run build && npm run size-limit",
    "release": "npm run prepublishOnly && npm publish",
    "release:beta": "npm run prepublishOnly && npm publish --tag beta"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "mobx": {
      "optional": true
    },
    "mobx-react-lite": {
      "optional": true
    }

  },
  "dependencies": { },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@size-limit/preset-small-lib": "^11.0.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.2",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-import": "^2.29.0",
    "identity-obj-proxy": "^3.0.0",
    "intersection-observer": "^0.12.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.5.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.69.5",
    "size-limit": "^11.0.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.2",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-dts": "^3.6.3"
  },
  "size-limit": [
    {
      "name": "Full bundle (gzipped)",
      "path": "dist/index.js",
      "limit": "25 KB"
    },
    {
      "name": "Hooks only (gzipped)",
      "path": "dist/hooks.js",
      "limit": "8 KB"
    },
    {
      "name": "Components only (gzipped)",
      "path": "dist/components.js",
      "limit": "12 KB"
    },
    {
      "name": "Utils only (gzipped)",
      "path": "dist/utils.js",
      "limit": "6 KB"
    },
    {
      "name": "Debug only (gzipped)",
      "path": "dist/debug.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{test,spec}.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/tests/**/*",
      "!src/**/*.stories.{ts,tsx}",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "clearMocks": true,
    "restoreMocks": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks",
      "import"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "warn",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
