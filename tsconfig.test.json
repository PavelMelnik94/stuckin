{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // === НАСТРОЙКИ ДЛЯ ТЕСТОВ ===
    "target": "ES2022", // Современный JS для Node.js
    "module": "CommonJS", // CommonJS для Jest
    "moduleResolution": "node", // Node.js разрешение для Jest
    "composite": false, // Отключаем для избежания конфликтов

    // === ГЕНЕРАЦИЯ (отключаем для тестов) ===
    "declaration": false, // Не генерируем типы для тестов
    "declarationMap": false, // Отключаем declarationMap когда declaration=false
    "sourceMap": true, // Source maps для отладки тестов
    "inlineSourceMap": false,
    "inlineSources": false,

    // === ДОПОЛНИТЕЛЬНЫЕ ТИПЫ ДЛЯ ТЕСТОВ ===
    "types": [
      "jest", // Jest типы
      "@testing-library/jest-dom", // Jest-DOM матчеры
      "node" // Node.js типы
    ]
  },

  "include": [
    "src/**/*.test.ts", // Включаем только тесты
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/tests/**/*", // Тестовые утилиты
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*"
  ],

  // Важно: НЕ исключаем тесты, поскольку мы их явно включаем
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
